<?xml version="1.0"?>
<cd:Time timeformat="float(./days) * 86400 + float(./seconds) + float(./microseconds) / 1000000" xmlns:cd="http://www.stcorp.nl/coda/definition/2008/07" xmlns:ct="http://www.stcorp.nl/coda/test/2008/10" format="binary" last-modified="2020-02-25" name="modified_julian_days_2000">
